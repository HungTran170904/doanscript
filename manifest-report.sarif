  "runs": [
    {
      "tool": {
        "driver": {
          "informationUri": "https://armosec.io",
          "name": "kubescape",
          "rules": [
            {
              "id": "C-0211",
              "shortDescription": {
                "text": "CIS-5.7.3 Apply Security Context to Your Pods and Containers"
              },
              "fullDescription": {
                "text": "Apply Security Context to Your Pods and Containers"
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "help": {
                "text": "Remediation: Follow the Kubernetes documentation and apply security contexts to your pods. For a suggested list of security contexts, you may refer to the CIS Security Benchmark for Docker Containers."
              }
            },
            {
              "id": "C-0210",
              "shortDescription": {
                "text": "CIS-5.7.2 Ensure that the seccomp profile is set to docker/default in your pod definitions"
              },
              "fullDescription": {
                "text": "Enable `docker/default` seccomp profile in your pod definitions."
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "help": {
                "text": "Remediation: Use security context to enable the `docker/default` seccomp profile in your pod definitions. An example is as below:\n\n \n```\n  securityContext:\n    seccompProfile:\n      type: RuntimeDefault\n\n```"
              }
            },
            {
              "id": "C-0207",
              "shortDescription": {
                "text": "CIS-5.4.1 Prefer using secrets as files over secrets as environment variables"
              },
              "fullDescription": {
                "text": "Kubernetes supports mounting secrets as data volumes or as environment variables. Minimize the use of environment variable secrets."
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "help": {
                "text": "Remediation: If possible, rewrite application code to read secrets from mounted secret files, rather than from environment variables."
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "C-0211",
          "ruleIndex": 0,
          "message": {
